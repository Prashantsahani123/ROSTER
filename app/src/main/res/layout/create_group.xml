<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Entity Info"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Logo"
                                android:textColor="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <EditText
                                android:id="@+id/et_grpname"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:elegantTextHeight="true"
                                android:hint="Entity Name"
                                android:inputType="textCapSentences"
                                android:paddingBottom="7dp"
                                android:paddingLeft="11dp"
                                android:paddingTop="7dp"
                                android:singleLine="true"
                                android:textSize="15sp" />


                            <Spinner
                                android:id="@+id/group_category"
                                android:layout_width="fill_parent"
                                android:layout_height="34dp"
                                android:layout_marginTop="15dp"

                                android:drawSelectorOnTop="true"
                                android:singleLine="true"

                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/group_country"
                                android:layout_width="fill_parent"
                                android:layout_height="34dp"
                                android:layout_marginTop="15dp"

                                android:drawSelectorOnTop="true"
                                android:singleLine="true"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:background="@color/grey_light_shade"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_groupimg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/create_grp_imgadd" />
                        </LinearLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_other"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border"
                        android:hint="Other"
                        android:inputType="textCapSentences"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_countrycode"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border"
                            android:hint="Code"
                            android:inputType="number"
                            android:paddingBottom="7dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="7dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:layout_marginRight="5dp"
                            android:singleLine="true"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/et_mobile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border"
                            android:hint="Phone"
                            android:layout_weight="8"
                            android:inputType="number"
                            android:paddingBottom="7dp"
                            android:paddingLeft="11dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_email_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border"
                        android:hint="Email ID"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"

                        android:textSize="15sp" />


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_marginTop="10dp"
                    android:background="@color/seperator_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Entity Address (optional)"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/et_address1"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/border"

                        android:editable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="top|left"
                        android:hint="Tap to add Entity Address"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"
                        android:paddingBottom="7dp"
                        android:paddingLeft="11dp"
                        android:paddingTop="7dp"
                        android:scrollbars="vertical" />


                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:layout_marginBottom="20dp"
                    android:background="@color/seperator_color" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        class="com.SampleApp.row.ActionbarFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_button"
        android:gravity="center">

        <TextView

            android:id="@+id/ib_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Next"
            android:textColor="@color/bluecolor"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>
