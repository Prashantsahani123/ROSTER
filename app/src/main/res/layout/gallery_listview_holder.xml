<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_holder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="3dp">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"

                android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/description"
                style="@style/contentsStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toLeftOf="@id/iv_delete"
                android:ellipsize="end"
                android:letterSpacing="0.03"
                android:maxLines="2"
                android:paddingRight="16dp"
                android:text="" />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:id="@+id/ontimepp"
                style="@style/contentsStyle"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="35dp">

            <androidx.appcompat.widget.AppCompatButton
                android:visibility="gone"

                android:id="@+id/ontimep"
                style="@style/contentsStyle"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/description"
                android:ellipsize="end"
                android:letterSpacing="0.02"
                android:textAllCaps="false"
                android:maxLines="1"
                android:background="@drawable/nonclick"
                android:textSize="10sp"

                android:paddingLeft="6dp"
                android:padding="6dp"
                android:text="One time project" />



                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:visibility="gone"
                    android:id="@+id/modert"
                    android:orientation="vertical"
                    android:layout_below="@+id/description"
                    android:layout_width="wrap_content"
                    android:background="@drawable/nonclick"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="#7FC5E4"
                        android:text="Moderator Status">

                    </TextView>



                <TextView

                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/mdrt_text"
                    style="@style/contentsStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@+id/description"
                    android:ellipsize="end"
                    android:letterSpacing="0.02"
                    android:textAllCaps="false"
                    android:maxLines="1"

                    android:textSize="10sp"
                    android:textColor="#131212"
                    android:paddingLeft="6dp"
                    android:layout_marginRight="2dp"
                    android:padding="0dp"
                    android:text=" " />



            </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/description"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color"/>

</LinearLayout>