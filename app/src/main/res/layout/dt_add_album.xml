<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <fragment
        android:id="@+id/fragment"
        class="com.SampleApp.row.ActionbarFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/seperator_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Recipient Type"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:text=""

                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/d_radio0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/dark_gray"
                                android:checked="true"
                                android:onClick="onRadioButtonClicked"
                                android:text="All" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/d_radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/dark_gray"
                                android:onClick="onRadioButtonClicked"
                                android:text="Sub Groups" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/d_radio2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/dark_gray"
                                android:onClick="onRadioButtonClicked"
                                android:text="Members" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/getCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="You have added 0 member"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:src="@drawable/edit_black" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/llShareWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Share"
                            android:textSize="16sp" />


                        <RadioGroup
                            android:id="@+id/rgShare"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rbInClub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colorPrimary"
                                android:checked="true"
                                android:text="District Event" />

                            <RadioButton
                                android:id="@+id/rbPublic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:buttonTint="@color/colorPrimary"
                                android:text="District Project" />

                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

                <TextView
                    android:id="@+id/tv_clubServiceInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="In District Event, post your  District's internal events.In District Project post all district projects. The content posted in District Project will be displayed to all ROW users globally."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_category"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/leftMargin"
                        android:text="Category"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/leftMargin"
                        android:layout_marginRight="@dimen/rightMargin"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/border_bg_white_dropdown">

                        <Spinner
                            android:id="@+id/sp_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences"
                            android:singleLine="true" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_categoryName"
                        style="@style/TBEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Enter the category name"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                    <!--<Spinner-->
                    <!--android:id="@+id/et_category"-->
                    <!--style="@style/TBEditText"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:inputType="textCapSentences"-->
                    <!--android:padding="5dp"-->
                    <!--android:singleLine="true"-->

                    <!--/>-->

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/leftMargin"
                        android:text="Date"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/et_DOP"
                        style="@style/TBEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="Select Date"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

                <LinearLayout
                    android:id="@+id/ll_rotaryServicecontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Cost(Local Currency)"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:background="@drawable/border_bg_white_dropdown"
                                android:visibility="gone">

                                <Spinner
                                    android:id="@+id/et_currency"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:inputType="textCapSentences"
                                    android:singleLine="true" />
                            </LinearLayout>


                            <EditText
                                android:id="@+id/et_COP"
                                style="@style/TBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="0dp"
                                android:layout_weight="3"
                                android:inputType="number"
                                android:padding="6dp"
                                android:singleLine="true" />
                        </LinearLayout>

                        <!--<EditText-->
                        <!--android:id="@+id/et_COP"-->
                        <!--style="@style/TBEditText"-->
                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginTop="5dp"-->
                        <!--android:inputType="textCapSentences"-->
                        <!--android:padding="5dp"-->
                        <!--android:singleLine="true" />-->

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/separator_height"
                        android:background="@color/seperator_color" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Beneficiaries"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/et_Beneficiary"
                            style="@style/TBEditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:digits="0123456789"
                            android:hint="Enter Beneficiary"
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/separator_height"
                        android:background="@color/seperator_color" />


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Man hours"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:layout_marginTop="5dp"
                            android:text="(No. of Rotarians x No. of hours)"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_manPower"
                                style="@style/TBEditText"
                                android:layout_width="fill_parent"
                                android:layout_height="38dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="3"
                                android:inputType="numberDecimal"
                                android:singleLine="true" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_weight="7"
                                android:background="@drawable/border_bg_white_dropdown"
                                android:visibility="gone">

                                <Spinner
                                    android:id="@+id/sp_timeType"
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:inputType="textCapSentences"
                                    android:singleLine="true" />
                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/separator_height"
                        android:background="@color/seperator_color" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Rotarians"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_noOfRotarians"
                            style="@style/TBEditText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:inputType="number"
                            android:padding="5dp"
                            android:singleLine="true" />

                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/separator_height"
                        android:background="@color/seperator_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:textSize="16sp" />


                    <EditText
                        android:id="@+id/et_galleryTitle"
                        style="@style/TBEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:inputType="textCapSentences"
                        android:padding="5dp"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Description"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="250"
                                android:textColor="@color/bluecolor"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_evetDesc"
                        style="@style/TBEditText"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"

                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:maxLines="6"
                        android:minLines="3"
                        android:padding="5dp"
                        android:scrollHorizontally="false" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/leftMargin"
                            android:text="Photo(Maximum 5 photos)"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">



                            <ImageView
                                android:id="@+id/iv_event_photo"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/asset" />


                            <ImageView
                                android:id="@+id/close1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentTop="true"
                                android:layout_margin="5dp"
                                android:src="@drawable/close"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/et_coverPhoto"
                            style="@style/TBEditText"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="10dp"
                            android:gravity="start"
                            android:hint="Enter image description here (Optional)" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/separator_height"
                        android:background="@color/seperator_color" />

                    <LinearLayout
                        android:id="@+id/ll_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_album_photo"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@drawable/asset" />

                                <ImageView
                                    android:id="@+id/close2"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/close"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/et_album_photo1"
                                style="@style/TBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:hint="Enter image description here (Optional)" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/separator_height"
                            android:background="@color/seperator_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_album_photo2"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@drawable/asset" />

                                <ImageView
                                    android:id="@+id/close3"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/close"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/et_album_photo2"
                                style="@style/TBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"

                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:hint="Enter image description here (Optional)" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/separator_height"
                            android:background="@color/seperator_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_album_photo3"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@drawable/asset"

                                    />

                                <ImageView
                                    android:id="@+id/close4"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/close"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/et_album_photo3"
                                style="@style/TBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:hint="Enter image description here (Optional)" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/separator_height"
                            android:background="@color/seperator_color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/iv_album_photo4"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:background="@drawable/asset" />

                                <ImageView
                                    android:id="@+id/close5"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_margin="5dp"
                                    android:src="@drawable/close"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/et_album_photo4"
                                style="@style/TBEditText"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginTop="10dp"
                                android:gravity="start"
                                android:hint="Enter image description here (Optional)" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"
        android:background="@color/view_color" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bottom_button"
                android:gravity="center"
                android:padding="15dp"
                android:text="Add"
                android:textColor="@color/view_color_blue"
                android:textSize="19sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/separator_height"
            android:layout_height="match_parent"
            android:background="@color/seperator_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="15dp"
                android:text="Cancel"
                android:textColor="@color/view_color_blue"
                android:textSize="19sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>