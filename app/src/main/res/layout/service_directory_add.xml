                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@color/seperator_color" />

