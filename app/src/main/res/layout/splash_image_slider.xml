<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/wel"
    >
    <!-- Top Sliding Banners -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <androidx.viewpager.widget.ViewPager
            android:visibility="gone"
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="@string/terms_conditions"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>

                <View
                    android:id="@+id/view_terms_and_condition"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="#000000"
                    android:paddingTop="5dp"
                    android:visibility="gone"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="#000000"
                android:paddingTop="5dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_weight="0.9"
                        android:id="@+id/tv_accept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:textStyle="bold"
                        android:text="@string/accept_btn"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:visibility="gone" />

                    <View

                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="#000000" />



                </LinearLayout>




                <View

                    android:id="@+id/margin"
                    android:layout_width="@dimen/separator_height"
                    android:layout_height="0.5dp"
                    android:background="@color/black" />


                <!--<TextView-->
                <!--android:id="@+id/tv_margin"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="@dimen/activity_vertical_margin"-->
                <!--android:text="|"-->
                <!--android:textColor="@color/view_color"-->
                <!--android:visibility="gone"/>-->



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_exit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/exit_btn"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

         <!--   <View
                android:id="@+id/view_terms_and_condition2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="@color/black"
                android:paddingTop="5dp" />-->


            <!-- <com.viewpagerindicator.CirclePageIndicator
                 android:id="@+id/indicator"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="7dp"
                 android:gravity="bottom"
                 android:padding="1dip"
                 app:centered="true"
                 app:fillColor="@color/white"
                 app:snap="false" />-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/separator_height"
                android:background="#000000"
                android:paddingTop="5dp"/>

            <com.viewpagerindicator.CirclePageIndicator
                android:id="@+id/indicator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="bottom"
                android:padding="1dip" />


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>
