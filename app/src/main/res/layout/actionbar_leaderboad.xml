<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/relative_actionbar"
    android:orientation="vertical">




            <ImageView
                android:id="@+id/iv_backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/back_btn_blue" />

    <RelativeLayout
        android:id="@+id/buttonWrapper"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:drawSelectorOnTop="true"
            android:gravity="center_horizontal|center_vertical"
            android:paddingRight="5dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_spinner_anchor"
            android:visibility="gone" />

    </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/buttonWrapper"
                android:layout_toStartOf="@id/buttonWrapper"
                android:layout_toRightOf="@id/iv_backbutton"
                android:layout_toEndOf="@id/iv_backbutton"
                android:layout_centerVertical="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:gravity="center_horizontal"
                android:text="District Leader board"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="20sp" />



</RelativeLayout>